}

<div class="col-md-4 m-auto">

    <h1 class="display-4">Gênero</h1>
    <h4 class="display-6">Alterar</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
